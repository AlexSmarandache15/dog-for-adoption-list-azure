@page
@model DogForAdoptionList.Pages.DogList.CreateModel

<br />
<h2 class="text-info">Add a new dog for adoption</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text=danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Dog.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Dog.Name" class="form-control" />
            </div>
            <span asp-validation-for="Dog.Name" class="text=danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Dog.Gender"></label>
            </div>
            <div class="col-6">
                <input asp-for="Dog.Gender" class="form-control" />
            </div>
            <span asp-validation-for="Dog.Gender" class="text=danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Dog.Race"></label>
            </div>
            <div class="col-6">
                <input asp-for="Dog.Race" class="form-control" />
            </div>
            <span asp-validation-for="Dog.Race" class="text=danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Dog.DateOfBirth"></label>
            </div>
            <div class="col-6">
                <input asp-for="Dog.DateOfBirth" class="form-control" />
            </div>
            <span asp-validation-for="Dog.DateOfBirth" class="text=danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a> 
            </div>
        </div>
    </form>
</div> 

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}