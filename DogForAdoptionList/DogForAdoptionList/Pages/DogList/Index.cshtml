@page
@model DogForAdoptionList.Pages.DogList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Dog List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Upsert" class="btn btn-info form-control text-white">Add New Dog For Adoption</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Dogs.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Dogs.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @* @Html.DisplayNameFor(m=>m.Dogs.FirstOrDefault().Gender) *@
                            <label asp-for="Dogs.FirstOrDefault().Gender"></label>
                        </th>
                        <th>
                            <label asp-for="Dogs.FirstOrDefault().Race"></label>
                        </th>
                        <th>
                            <label asp-for="Dogs.FirstOrDefault().DateOfBirth"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var iterator in Model.Dogs)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => iterator.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => iterator.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(m => iterator.Race)
                            </td>
                            <td>
                                @Html.DisplayFor(m => iterator.DateOfBirth)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@iterator.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@iterator.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>

                        </tr>

                    }

                </table>
            }
            else
            {
                <p>No dogs available</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th> Gender</th>
                    <th> Race</th>
                    <th> DateOfBirth</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/dogList.js"></script>
}

